<script src="/stylesheets/validator.js"></script>
<script>

    Validator({
        form: '#form-login',
        errSelector: '.form-message',
        rules: [
            Validator.isRequired('#adphone', 'Số điện thoại không được để trống'),
            Validator.isPhone('#adphone', 'Bạn phải nhập số điện thoại'),
            Validator.minLength('#adphone', 10, 'Số điện thoại phải đủ 10 số'),
            Validator.isRequired('#adpass', 'Mật khẩu không được để trống'),
        ],
    })
</script>
