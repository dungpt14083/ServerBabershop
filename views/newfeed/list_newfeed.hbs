<script>
    let modalDelete = document.getElementById('modalDelete');
    let btnDeleteNewfeed = document.getElementById('btnDeleteNewfeed');
    let btnEditNewfeed = document.getElementById('btnEditNewfeed');
    let deleteForm = document.forms['delete-newfeed-form'];
    let editForm = document.forms['form-edit'];
    modalDelete.addEventListener('show.bs.modal', function (event) {
        let button = event.relatedTarget
        let id = button.getAttribute('data-id')
        btnDeleteNewfeed.onclick = function () {
            deleteForm.action = '/newfeed/delete/' + id + '?_method=DELETE';
            deleteForm.submit();
        }
    })
    $(document).ready(function () {
        $('.btnedit').on('click', function () {

            $('#editmodal').modal('show');
            $tr = $(this).closest('tr');
            const data = $tr.children("td").map(function () {
                return $(this).text();
            }).get();
            const imgs = $tr.find('img')
            $("#preview").empty();
            for (let i = 0; i < imgs.length; i++) {
                $("#preview").append(`
                    <div class="item-img">
                        <img style="border-radius: 10px" src="${$(imgs[i]).attr("src")}">
                    </div>
                `)
            }
            $('#title').val(data[0]);
            $('#contentTitle').val(data[2]);
            $('#description').val(data[3]);
            let id = $(this).attr("data-id");
            btnEditNewfeed.onclick = function () {
                editForm.action = '/newfeed/edit/' + id + '?_method=PUT';
                editForm.submit();
            }
        });
    });
    $(document).ready(function () {
        $('.btnDetail').on('click', function () {

            $('#modalDetail').modal('show');
            $tr = $(this).closest('tr');
            const data = $tr.children("td").map(function () {
                return $(this).text();
            }).get();
            const imgs = $tr.find('img')
            $("#previewDetail").empty();
            for (let i = 0; i < imgs.length; i++) {
                $("#previewDetail").append(`
                    <div class="item-img">
                        <img src="${$(imgs[i]).attr("src")}">
                    </div>
                `)
            }
            $('#titleDetail').text(data[0]);
            $('#contentTitleDetail').text(data[2]);
            $('#descriptionDetail').text(data[3]);
        });
    });

    //doan e cop tren stack
    const el = (sel, par) => (par || document).querySelector(sel);
    const elNew = (tag, props) => Object.assign(document.createElement(tag), props);
    const elFiles = el("#imageNewfeed");
    const elPreview = el("#preview");
    const previewImage = (props) => elPreview.append(elNew("img", props));
    const reader = (file, method = "readAsDataURL") => new Promise((resolve, reject) => {
        const fr = new FileReader();
        fr.onload = () => resolve({file, result: fr.result});
        fr.onerror = (err) => reject(err);
        fr[method](file);
    });
    const previewImages = async (files) => {
        elPreview.innerHTML = "";

        let filesData = [];

        try {
            const readerPromises = files.map((file) => reader(file));
            filesData = await Promise.all(readerPromises);
        } catch (err) {
            elPreview.textContent = "An error occurred while loading images. Try again.";
            console.error(err);
            return; // Exit function here.
        }
        filesData.forEach(data => {
            previewImage({
                src: data.result, // Base64 String
                alt: data.file.name // File.name String
            });
        });
    };
    elFiles.addEventListener("change", (ev) => {
        if (!ev.currentTarget.files) return; // Do nothing.
        previewImages([...ev.currentTarget.files]);
    });
</script>

