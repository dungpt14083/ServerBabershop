                <td style="white-space: nowrap; overflow: hidden; max-width: 300px; text-overflow: ellipsis;">{{this.contentTitle}}</td>
                <td style="white-space: nowrap; overflow: hidden; max-width: 300px; text-overflow: ellipsis;">{{this.description}}</td>
<!--                <td style="white-space: nowrap; overflow: hidden; max-width: 300px; text-overflow: clip;">{{this.contentTitle}}</td>-->
<!--                <td style="white-space: nowrap; overflow: hidden; max-width: 400px; text-overflow: clip;">{{this.description}}</td>-->


