<div class="modal" id="modalEdit">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Sửa thợ cắt tóc</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form method="post" action="" name="form-edit" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Tên Stylist:</label>
                        <input type="text" name="nameStylist" class="form-control" id="nameStylist">
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Ảnh:</label>
                        <input class="form-control" id="imageStylist" name="imageStylist" type="file"
                               onchange="onFileSelected(event)">
                        <img src="" id="SetImage" alt="Your retrived image is here" width="100" height="100">
                        </input>
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Mô tả:</label>
                        <textarea class="form-control" name="description" placeholder="Nội dung ..."
                                  id="description"></textarea>
                    </div>
                </form>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" id="btnEditStylist" class="btn btn-danger btnEditStylist">Lưu lại
                </button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Hủy</button>
            </div>

        </div>
    </div>
</div>

