</div>
<script>
    const modalStatus1 = document.getElementById('modalStatus1');
    const modalStatus0 = document.getElementById('modalStatus0');
    const modalStatus2 = document.getElementById('modalStatus2');
    const btnSearch = document.getElementById('btnSearch');
    const modalEdit = document.getElementById('modalEdit');


    const btnEditStylist = document.getElementById('btnEditStylist');
    const editForm = document.forms['form-edit'];
    const formSearch = document.forms['formSearch'];


    $(document).ready(function () {
        $('.editbtn').on('click', function () {

            $('#modalEdit').modal('show');
            $tr = $(this).closest('tr');
            const data = $tr.children("td").map(function () {
                return $(this).text();
            }).get();
            const Imagedata = [];
            Imagedata.push($tr.find('img').attr('src'))
            $('#SetImage').attr('src', Imagedata[0]);
            $('#nameStylist').val(data[0]);
            $('#description').val(data[3]);
            let id = $(this).attr("data-id");
            btnEditStylist.onclick = function () {
                editForm.action = '/hairstylist/edit/' + id + '?_method=PUT';
                editForm.submit();
            }
        });
    });

    function onFileSelected(event) {
        var selectedFile = event.target.files[0];
        var reader = new FileReader();

        var imgtag = document.getElementById("SetImage");
        imgtag.title = selectedFile.name;
        reader.onload = function (event) {
            imgtag.src = event.target.result;
        };
        reader.readAsDataURL(selectedFile);
    }

    $(document).ready(function () {
        $('.btnDetail').on('click', function () {

            $('#modalDetail').modal('show');
            $tr = $(this).closest('tr');
            const data = $tr.children("td").map(function () {
                return $(this).text();
            }).get();
            const Imagedata = [];
            Imagedata.push($tr.find('img').attr('src'))

            $('#imageDetail').attr('src', Imagedata[0]);
            $('#nameDetail').text(data[0]);
            $('#descriptionDetail').text(data[3]);
        });
    });
    const table = document.getElementById("table_main1");
    const ranh = table.querySelectorAll('button.status0');
    const ban = table.querySelectorAll('button.status1');
    const nghilam = table.querySelectorAll('button.status2');
    const btnEdit = table.querySelectorAll('button.editbtn');
    const status_main = table.querySelectorAll('td.status_main');

    var list_status = [status_main.length];
    for (let i = 0; i < status_main.length; i++) {
        if (status_main[i].innerHTML == 0) {
            status_main[i].innerHTML = "Rảnh"
            status_main[i].style.color = "#169A12"
            status_main[i].style.fontWeight = "bold"
        } else if (status_main[i].innerHTML == 1) {
            status_main[i].innerHTML = "Bận"
            status_main[i].style.color = "#A9A400"
            status_main[i].style.fontWeight = "bold"
        } else if (status_main[i].innerHTML == 2) {
            status_main[i].innerHTML = "Nghỉ làm"
            status_main[i].style.color = "#AF1C1C"
            status_main[i].style.fontWeight = "bold"
        }
    }
    for (let i = 0; i < status_main.length; i++) {
        if (status_main[i].innerHTML == "Rảnh") {
            list_status[i] = 0;
        } else if (status_main[i].innerHTML == "Bận") {
            list_status[i] = 1;
        } else if (status_main[i].innerHTML == "Nghỉ làm") {
            list_status[i] = 2;
        }
    }
    for (let i = 0; i < list_status.length; i++) {

        if (list_status[i] == 0) {
            ranh[i].hidden = true;
            ban[i].hidden = false;
            nghilam[i].hidden = false;
            // btn_delete[i].hidden = true;

        } else if (list_status[i] == 1) {
            ranh[i].hidden = false;
            ban[i].hidden = true;
            nghilam[i].hidden = false;
            // btn_delete[i].hidden = false;

        }
        else if(list_status[i] == 2){
            ranh[i].hidden = true;
            ban[i].hidden = true;
            nghilam[i].hidden = true;
            btnEdit[i].hidden = true;
        }
    }
    const status1Form = document.forms['form-status1'];
    const btnStatus1 = document.getElementById('btnStatus1');
    const status0Form = document.forms['form-status0'];
    const btnStatus0 = document.getElementById('btnStatus0');
    const status2Form = document.forms['form-status2'];
    const btnStatus2= document.getElementById('btnStatus2');
    modalStatus1.addEventListener('show.bs.modal', function (event) {
        let button = event.relatedTarget
        let id = button.getAttribute('data-id')
        btnStatus1.onclick = function () {
            status1Form.action = '/hairstylist/status1/' + id + '?_method=PUT';
            status1Form.submit();
        }
    });
    modalStatus0.addEventListener('show.bs.modal', function (event) {
        let button = event.relatedTarget
        let id = button.getAttribute('data-id')
        btnStatus0.onclick = function () {
            status0Form.action = '/hairstylist/status0/' + id + '?_method=PUT';
            status0Form.submit();
        }
    });
    modalStatus2.addEventListener('show.bs.modal', function (event) {
        let button = event.relatedTarget
        let id = button.getAttribute('data-id')
        btnStatus2.onclick = function () {
            status2Form.action = '/hairstylist/status2/' + id + '?_method=PUT';
            status2Form.submit();
        }
    })
</script>

